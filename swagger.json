{
  "swagger": "2.0",
  "info": {
    "description": "LoversID backend API list",
    "version": "1.0.0",
    "title": "Loversid.com",
    "contact": { "email": "mdtajalislam1189@gmail.com" }
  },
  "host": "localhost:1337/",
  "schemes": ["http"],
  "paths": {
    "/api/user/signup": {
      "post": {
        "responses": {},
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": { "$ref": "#/definitions/User" }
          }
        ]
      }
    },
    "/api/user/verify-otp/{_id}": {
      "put": {
        "responses": {},
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": { "$ref": "#/definitions/OTP" }
          },
          { "in": "path", "name": "_id" }
        ]
      }
    }
  },
  "securityDefinitions": {
    "bearerAuth": {
      "name": "Authorization",
      "in": "header",
      "type": "apiKey",
      "description": "JWT Authorization header"
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "email": { "type": "string", "example": "tajal@gmail.com" },
        "username": { "type": "string", "example": "tajal_islam" },
        "password": { "type": "string", "example": "Aa123123" },
        "passwordConfirmation": { "type": "string", "example": "Aa123123" },
        "ownGender": { "type": "string", "example": "Male" },
        "findGender": { "type": "string", "example": "Female" },
        "mobileNum": { "type": "string", "example": "+8801883950739" },
        "isVerify": { "type": "boolean", "example": false },
        "verifyCode": { "type": "string", "example": "123456" }
      }
    },
    "OTP": {
      "type": "object",
      "properties": {
        "verifyCode": { "type": "string", "example": "123456" }
      }
    }
  }
}
